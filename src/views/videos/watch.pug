extends ../base

block content
  if video.fileUrl.includes('http')
    video(src=video.fileUrl, controls)
  else
    video(src='/' + video.fileUrl, controls)

  div
    p= video.description
    small= video.createdAt
  div 
    small Uploaded by &nbsp
      a(href=`/users/${video.owner._id}`)= video.owner.username

  if String(user._id) === String(video.owner._id)
    a(href=`./${video._id}/edit`) Edit Video &rarr;
    br
    a(href=`./${video._id}/remove`) Remove Video &rarr;
