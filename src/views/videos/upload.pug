extends ../base

block content
  if errorMessage
    span= errorMessage

  form(method="post", enctype="multipart/form-data")
    lable(for="video") Video File
    input#video(type="file", accept="video/*", required, name="video")
    input(
      name="title",
      placeholder="Title",
      required,
      type="text",
      maxlength=80
    )
    input(name="description", placeholder="Description", required, type="text")
    input(
      name="hashtags",
      placeholder="HashTags, separated by comma.",
      required,
      type="text"
    )
    input(type="submit", value="Upload Video!")
